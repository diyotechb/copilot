{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "baseUrl": "./",
    "moduleResolution": "node",
    "paths": {
      "@/*": ["src/*"]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "src/**/*"
, "babel.config.cjs"  ],
  "exclude": [
    "node_modules",
    "dist",
    "public",
    "server",
    "tests",
    "**/*.spec.js",
    "**/*.spec.*"
  ]
}